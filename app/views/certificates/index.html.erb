<p id="notice"><%= notice %></p>

<h1>Listing Certificates</h1>

<table>
  <thead>
    <tr>
      <th>Claimable uri</th>
      <th>Claimable type</th>
      <th>Template pdf</th>
      <th>Template background image</th>
      <th>Certificate type</th>
      <th>Available credit</th>
      <th>Expiration date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @certificates.each do |certificate| %>
      <tr>
        <td><%= certificate.claimable_uri %></td>
        <td><%= certificate.claimable_type %></td>
        <td><%= certificate.template_pdf %></td>
        <td><%= certificate.template_background_image %></td>
        <td><%= certificate.certificate_type %></td>
        <td><%= certificate.available_credit %></td>
        <td><%= certificate.expiration_date %></td>
        <td><%= link_to 'Show', certificate %></td>
        <td><%= link_to 'Edit', edit_certificate_path(certificate) %></td>
        <td><%= link_to 'Destroy', certificate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

